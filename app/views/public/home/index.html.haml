.container
  .main-body
    .body-inner-content
      %strong> New Features: You can now embed E-Library books on your website!
      %a.learn-more{:role => "button"} Learn More
    .all-margin
      .browse-subject
        %a Browse by Subject
        %hr/
      .carousal-container
        .single-item
          .block-subject
            - @subjects.each do |subject|
              %img.img-responsive.castle{:src =>'assets/default_image.png'}/
              %p.religion 
                = subject.name
              %p.religion-subtext 
                = subject.books.count
      .Classic-Books
